{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "lib": ["esnext"],
    "outDir": "prod",
    "strict": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
